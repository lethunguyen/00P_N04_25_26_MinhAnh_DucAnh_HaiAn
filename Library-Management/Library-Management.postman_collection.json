{
  "info": {
    "name": "Library Management API",
    "_postman_id": "library-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Books",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/books/api",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["books","api"]
        }
      }
    },
    {
      "name": "Add Book",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"New Postman Book\",\n  \"author\": \"API\",\n  \"publishYear\": 2023,\n  \"quantity\": 2\n}"
        },
        "url": {
          "raw": "http://localhost:8080/books",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["books"]
        }
      }
    }
  ]
}
